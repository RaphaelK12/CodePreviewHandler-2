<local:ModernDialog
    x:Class="Manager.Dialogs.YesNoDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Manager.Dialogs"
    Title=""
    Width="300"
    Height="180">

    <Grid Background="#EEEEEE" DataContext="{StaticResource ModernDialog}">
        <Image
            Name="Img"
            Width="48"
            Height="48"
            Margin="10,8,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <TextBlock
            Name="Text"
            Margin="63,0,0,47"
            Padding="4,20,4,4"
            FontSize="16"
            TextWrapping="Wrap" />
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button
                Width="65"
                Margin="0,0,8,8"
                Click="OKButton_Click"
                Content="OK"
                Style="{StaticResource ModernPrimaryButton}" />
            <Button
                Width="80"
                Margin="0,0,0,8"
                Click="CancelButton_Click"
                Content="Отмена"
                Style="{StaticResource ModernButton}" />
        </StackPanel>
    </Grid>

</local:ModernDialog>

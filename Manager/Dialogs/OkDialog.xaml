<Window
    x:Class="Manager.Dialogs.OkDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title=""
    Width="300"
    Height="144"
    Style="{StaticResource ModernDialog}"
    WindowStartupLocation="CenterOwner">

    <Grid Background="#EEEEEE">
        <TextBlock
            Margin="48,0,0,0"
            Text="You have not admin privileges for this. Please restart app with needed rights"
            TextWrapping="Wrap" />
        <Button
            x:Name="InstallForCurrentUserButton"
            Width="72"
            Margin="202,58,10,10"
            Click="InstallForCurrentUserButton_Click"
            Content="Ok"
            Style="{StaticResource ModernButton}" />
    </Grid>

</Window>

<Window
    x:Class="Manager.Dialogs.InstallationDialog.InstallationDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title=""
    Width="300"
    Height="120"
    Style="{StaticResource ModernDialog}"
    WindowStartupLocation="CenterOwner">

    <StackPanel>
        <Button
            x:Name="InstallForAllUsersButton"
            Margin="4,4,4,2"
            Click="InstallForAllUsersButton_Click"
            Style="{StaticResource ModernPrimaryButton}">
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource FabricUI}"
                    Text="&#xEA18;" />
                <TextBlock Margin="4,0,0,0" Text="Install for all users" />
            </StackPanel>
        </Button>
        <Button
            x:Name="InstallForCurrentUserButton"
            Margin="4,2,4,4"
            Click="InstallForCurrentUserButton_Click"
            Content="Install for current user"
            Style="{StaticResource ModernButton}" />
    </StackPanel>

</Window>
